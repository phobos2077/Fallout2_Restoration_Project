/******************************************************************************************
   IF it gets damaged
******************************************************************************************/

procedure damage_p_proc begin
   if (source_obj == dude_obj) then begin
      set_personal_enemy;
      set_map_var(MVAR_Attack_Slavers,1);
   end
end

procedure destroy_p_proc begin
   inc_evil_critter
   DOG_obj := 0;
end


procedure critter_p_proc begin
   if ( ( (metzger_dead) or (hostile) or (map_var(MVAR_Attack_Slavers) == 1) or ( (global_var(GVAR_NCR_PLAYER_RANGER)) ) ) and (self_can_see_dude) ) then begin
         self_attack_dude;
   end else begin
      if ((is_visible(GUARD_obj))) then begin
         if (tile_distance(self_tile,tile_num(GUARD_obj)) > 3) then begin
            self_walk_to_tile(tile_num(GUARD_obj));
         end
      end
   end

   //if (tile_distance_objs(self_obj,GUARD_obj) > 6) then begin
   //   anim_move_to_point_rate(tile_num(GUARD_obj), 2)
   //end
end

/***************************************************************************************
   Whenever the map is first entered, this procedure will be called.
***************************************************************************************/

procedure map_enter_p_proc begin
   DOG_obj := self_obj;
   set_self_team(TEAM_SLAVER_CAMP_SLAVERS);
end


/**************************************************************************************
   This procedure gets called roughly every 30 seconds of real time.
**************************************************************************************/

procedure map_update_p_proc begin
   DOG_obj := self_obj;
end


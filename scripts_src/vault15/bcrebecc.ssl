procedure do_trans begin
   fadeout(1);
   move_to(self_obj, REBECCA_TENT_POS, self_elevation);
   move_to(dude_obj, DUDE_TENT_POS, self_elevation);

   reg_anim_clear(self_obj);
   reg_anim_begin();
   reg_anim_animate(self_obj, ANIMATE_ROTATION, 4);
   reg_anim_end();

   reg_anim_clear(dude_obj);
   reg_anim_begin();
   reg_anim_animate(dude_obj, ANIMATE_ROTATION, 1);
   reg_anim_end();

   fadein(1);
   dialogue_system_enter;
end


/**************************************************************************************
   This procedure gets called when player is near.
**************************************************************************************/

procedure spatial_p_proc begin
   script_overrides;
   if (source_obj == dude_obj) then begin
      if ( (local_var(LVAR_Message) == 0) ) then begin
         display_msg(mstr(100));
         set_local_var(LVAR_Message, 1);
      end

   end
end
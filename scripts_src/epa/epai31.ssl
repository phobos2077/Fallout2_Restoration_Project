      destroy_object(tile_contains_pid_obj(17658,dude_elevation,33555155));
      destroy_object(tile_contains_pid_obj(17658,dude_elevation,33555154));

      destroy_object(tile_contains_pid_obj(18060,dude_elevation,33555153));
      destroy_object(tile_contains_pid_obj(18059,dude_elevation,33555153));

      //remove fumes in the room
      destroy_object(tile_contains_pid_obj(16699,dude_elevation,33556283));
      destroy_object(tile_contains_pid_obj(17083,dude_elevation,33556283));


      game_time_advance(ONE_GAME_MINUTE * 10);
      gfade_in(ONE_GAME_SECOND);

      set_map_var(MVAR_Cleaned_Fan,((map_var(MVAR_Cleaned_Fan)) + 1));

   if (local_var(LVAR_Cleaned_Fan) == 0) then begin
      set_local_var(LVAR_Cleaned_Fan,1);
      gfade_out(ONE_GAME_SECOND);
      destroy_object(tile_contains_pid_obj(17859,dude_elevation,33555153));
      destroy_object(tile_contains_pid_obj(17458,dude_elevation,33555150));
      destroy_object(tile_contains_pid_obj(17658,dude_elevation,33555150));

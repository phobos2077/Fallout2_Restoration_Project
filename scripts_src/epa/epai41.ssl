#define PARTY_NON_BIPED_SIZE (Cyberdog_In_Party+Robobrain_In_Party+Robobrain_Chimp_In_Party+Robobrain_Abnormal_In_Party+Robobrain_Human_In_Party+K9_In_Party+Pariah_Dog_In_Party+Dogmeat_In_Party)


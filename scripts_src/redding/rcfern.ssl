procedure Node008a begin
   if (global_var(CARAVAN_GVAR) == REDDING_CARAVAN_ABANDONED) then
       call Node001;
   else if (global_var(CARAVAN_GVAR) == REDDING_CARAVAN_THEFT) then
       call Node002;
   else if ((caravan_guards_left < (caravan_total_guards/4)) or //edit by killap was > in both checks
            (caravan_carts_left < ((caravan_total_carts*4)/10))) then
       call Node004;
   else if ((caravan_guards_left < (caravan_total_guards/2)) or //edit by killap was > in both checks
            (caravan_carts_left < ((caravan_total_carts*6)/10))) then
       call Node003;
   else if ((caravan_guards_left == caravan_total_guards) and
            (caravan_carts_left == caravan_total_carts)) then
       call Node006;
   else if ((caravan_guards_left >= (caravan_total_guards - 1)) and //edit by killap was <= in both checks
            (caravan_carts_left >= (caravan_total_carts - 2))) then
       call Node005;
   else
       call Node004;
end


end

//NOT ALONE
procedure Node003 begin
   set_global_var(GVAR_NAVARRO_BASE_ALERT,1);
   floater(random(109,111));
end

//ALERT
procedure Node004 begin
   said_intruder:=1;
   floater(random(112,114));
end


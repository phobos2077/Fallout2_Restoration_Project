**************************************************************************************/

procedure talk_p_proc begin
   if (dealer) then begin
      start_gdialog(NAME,self_obj,4,-1,-1);
      gSay_Start;
         call Node001;
      gSay_End;
      end_dialogue;
   end else
      floater(202);

end


procedure critter_p_proc begin
   if (self_can_see_dude) then begin
      if ( (hostile) or (map_var(MVAR_Dealer_Attacked) == 1) ) then begin
         set_map_var(MVAR_Dealer_Attacked,2);
         self_attack_dude;
      end
   end
end

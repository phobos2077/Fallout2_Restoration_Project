**************************************************************************************/

procedure talk_p_proc begin
   start_gdialog(NAME,self_obj,4,-1,-1);
   gSay_start;
      if (not dude_is_stupid) then begin
         call Node001;
      end else begin
         if (local_var(LVAR_Herebefore) == 0) then begin
            call Node007;
         end else begin
            floater(740);
         end
      end
   gSay_end;
   end_dialogue;
end


procedure timed_event_p_proc begin
   if (fixed_param == 3) then begin
      if (local_var(LVAR_borrow_light) == 0) then begin
         floater(random(300,302));
         add_timer_event(self_obj,random(75,100),3);
      end
   end else if (fixed_param == 999) then begin
      if (drinks_this_conversation > 0) then begin
         drinks_this_conversation -= 1;
         use_obj_on_obj(create_object(PID_ABBEY_BOOZE,0,0), dude_obj);
         flush_add_timer_event_sec(self_obj, 1, 999);
      end
   end
end


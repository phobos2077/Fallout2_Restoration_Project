end

procedure critter_p_proc begin
   if ( (global_var(GVAR_TOWN_REP_ABBEY) == -30) and (self_can_see_dude)) then begin
      attack(dude_obj);
   end else if (self_tile != local_var(LVAR_Home_Tile) and drinks_this_conversation == 0) then begin
      self_walk_to_tile(local_var(LVAR_Home_Tile));
   end else if (self_cur_rot != local_var(LVAR_Home_Rotation) and drinks_this_conversation == 0) then begin
      self_rotate(local_var(LVAR_Home_Rotation));
   end
end


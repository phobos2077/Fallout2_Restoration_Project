/**************************************************************************************
   This is used for any dialogue that may need to occur with the player.
**************************************************************************************/

procedure talk_p_proc
begin
   if (global_var(GVAR_ALCOHOL_ADDICT) == 1) then begin
      call Node001;
   end else if (Fallout2_enclave_destroyed) then begin
      call Node002;
   end else
      call Node003;
end


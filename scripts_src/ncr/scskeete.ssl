/* This procedure will get called each time that the map is first entered. It will
   set up the Team number and AI packet for this critter. This will override the
   default from the prototype, and needs to be set in scripts. */
procedure map_enter_p_proc begin
   Only_Once:=0;
   critter_add_trait(self_obj,TRAIT_OBJECT,OBJECT_TEAM_NUM,TEAM_NCR_SKEETER);
   critter_add_trait(self_obj,TRAIT_OBJECT,OBJECT_AI_PACKET,AI_PEASANT);

   Skeeter_High := Random(0, 1);

   startTileNum := tile_num(self_obj);
   add_timer_event(self_obj, 1, TIMER_TALK);
   add_timer_event(self_obj, 15, TIMER_MOVE);


   // Fix for Chosen One having the car but leaving it behind and arriving in NCR by joining a caravan - killap
   if ((global_var(GVAR_PLAYER_GOT_CAR)) and (metarule(30, 0) == 10)) then
     hasCar := global_var(GVAR_PLAYER_GOT_CAR);
   else
     hasCar := 0;

   if (local_var(LVAR_Herebefore) == 0) then
      Skeeter_High := 0;

   if (obj_is_carrying_obj_pid(self_obj, PID_BRASS_KNUCKLES)) then begin
      wield_obj(obj_carrying_pid_obj(self_obj, PID_BRASS_KNUCKLES));
   end
end



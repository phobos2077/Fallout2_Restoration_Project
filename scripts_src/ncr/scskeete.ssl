procedure timed_event_p_proc begin
   variable which;
   variable tileNum;
   variable info;
   variable Inven_Roll; //added
   variable item; //added
   variable count;   //added

//begin killap's code - expansion
   if (fixed_param == TIMER_STEAL_STUFF) then begin
      if ( (global_var(GVAR_NCR_CAR_JACKED) == 1) and (local_var(LVAR_stole_today) == 0) and (game_time_hour > 100) and (game_time_hour < 700) ) then begin
           Inven_Roll := random(0, (inven_count(Trunk_Ptr)-1));
           item := inven_ptr(Trunk_Ptr, Inven_Roll);
           count := rm_mult_objs_from_inven(Trunk_Ptr, item, 1);
           add_mult_objs_to_inven(playerTmpBox2, item, 1); //changed from self_obj
           set_local_var(LVAR_stole_today,1);
      end else begin
           add_timer_event(self_obj, ONE_GAME_HOUR*7, TIMER_STEAL_STUFF);
      end
   end
//end killap's code

   if (fixed_param == TIMER_TALK) then begin
      if not(combat_is_initialized) then begin
         if (Skeeter_High) then begin
            which := Random(1, 10);
            float_msg(self_obj, mstr(176 + which), Random(4, 7));
         end else begin
            if (obj_can_see_obj(self_obj, dude_obj)) then begin
               float_msg(self_obj, mstr(176), FLOAT_MSG_GREEN);
            end
         end
      end
      if (Skeeter_High) then
         add_timer_event(self_obj, game_ticks(5), TIMER_TALK);
      else
         add_timer_event(self_obj, game_ticks(15), TIMER_TALK);
   end else if (fixed_param == TIMER_MOVE) then begin
      if not(combat_is_initialized) then begin
         info := Random(0, 5);
         if (Skeeter_High) then
            tileNum := tile_num_in_direction(startTileNum, info, 10);
         else
            tileNum := tile_num_in_direction(startTileNum, info, 5);

         reg_anim_clear(self_obj);
         reg_anim_begin();
            if (Skeeter_High) then begin
               if (Random(0, 1)) then begin
                  animate_run_to_tile(tileNum);
               end else begin
                  animate_move_to_tile(tileNum);
               end
            end else begin
               animate_move_to_tile(tileNum);
            end
         reg_anim_end();
      end
      if (Skeeter_High) then
         add_timer_event(self_obj, game_ticks(2), TIMER_MOVE);
      else
         add_timer_event(self_obj, game_ticks(20), TIMER_MOVE);
   end
end


#define LVAR_Brahmin_Did_Replace          (1)
#define LVAR_Graze_Tile                   (2)

#define set_graze_tile                    if (is_slaughter_house_brahmin) then begin                                                                       \
                                             temp_tile := tile_num_in_direction(local_var(LVAR_Graze_Tile), random(0,5), random(1,3));                     \

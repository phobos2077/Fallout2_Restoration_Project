procedure timed_event_p_proc begin
variable temp_poo;
   if (self_visible) then begin
      if (fixed_param == 1) then begin
         if (cur_map_index != MAP_GHOST_FARM) then begin
            if (combat_is_initialized == false) then begin
               set_graze_tile
            end
            flush_add_timer_event_sec(self_obj, random(2, 10), 1);
         end
      end if (fixed_param == 2) then begin
         br_floater(random(201, 205));
         flush_add_timer_event_sec(self_obj, random(30, 45), 2);
      end else if (fixed_param == 3) then begin
         if (random(1,3) == 1) then begin
            br_floater(206);
            debug_msg("BRAHMIN IS POOING!!! hehehehe");
            temp_poo := create_object_sid(random(PID_SMALL_GOO_1, PID_SMALL_GOO_3), 0, 0, SCRIPT_ZIBRAPOO);
            move_to(temp_poo, tile_num_in_direction(self_tile, self_inv_rot, 1), 0);
         end
         flush_add_timer_event_sec(self_obj, random(120, 300), 3);
      //added by killap
      end else if (fixed_param == 4) then begin
         if not anim_busy(self_obj) then begin
            animate_move_to_tile(tile_num_in_direction(tile_num(self_obj),1,3));
            add_timer_event(self_obj, game_ticks(1), 4);
         end
      //end added
      end else begin
         check_did_replace
      end
   end
end

procedure critter_p_proc begin
   // setup pointers
   if (self_visible) then begin
      if (is_slaughter_house_brahmin) then begin
         if (brahmin_1_object == self_obj) then begin
            if ((freed_bess) and (tile_in_slaughter_house_area(self_tile))) then begin
               brahmin_1_object := 0;
            end else begin
               send_to_slaughter
            end
         end else if (freed_bess) then begin
            if (tile_distance(self_tile, map_next_tile) > 1) then begin
               animate_move_to_tile(map_next_tile);
               //added by killap
               if not anim_busy(self_obj) then begin
                  add_timer_event(self_obj, game_ticks(1), 4);
               end
               //end added
               if (step_tile < 0) then begin
                  animate_move_to_tile(local_var(LVAR_Graze_Tile));
               end
            end else begin
               check_did_replace
               inc_global_var(GVAR_MODOC_BRAHMIN_ESCAPED);
               debug_msg("GVAR_MODOC_BRAHMIN_ESCAPED == " + global_var(GVAR_MODOC_BRAHMIN_ESCAPED));
               if (brahmin_1_object == self_obj) then begin
                  brahmin_1_object := 0;
               end
               destroy_object(self_obj);
            end
         end else begin
            assign_brahmin_number
            else if (tile_distance(self_tile, local_var(LVAR_Graze_Tile)) > 0) then begin
               if ((critter_state(self_obj) bwand DAM_KNOCKED_DOWN) == FALSE) then begin
                  animate_move_to_tile(local_var(LVAR_Graze_Tile));
               end
            end
         end
      end
   end
end


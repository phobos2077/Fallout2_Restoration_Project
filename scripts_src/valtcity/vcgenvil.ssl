      float_msg(self_obj, message_str(SCRIPT_VCGENVIL, random(102, 108)), FLOAT_MSG_YELLOW);
    else
      float_msg(self_obj, message_str(SCRIPT_VCGENVIL, random(102, 106)), FLOAT_MSG_YELLOW);
  end
end



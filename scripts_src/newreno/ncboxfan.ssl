procedure timed_event_p_proc begin
   if (fight_is_on) then begin
      if ((announcer_obj != 0) and (prize_fighter_obj != 0)) then begin
         if (is_visible(announcer_obj) == false) then begin
            if (check_fight_status(fight_status_fighting)) then begin
               call Node007;
            end
         end
      end
   end else if (combat_is_initialized == false) then begin
      if ((obj_on_screen(self_obj)) and (random(1, 5) == 3)) then begin
         if ((dude_is_prizefighter) and (self_can_see_dude)) then begin
            if (dude_is_female) then begin
               call Node003;
            end else begin
               call Node002;
            end
         end else begin
            call Node001;
         end
      end
   end
   nr_add_timer_event_rand(self_obj, 25, 35, float_param);
end

procedure map_enter_p_proc begin
   if (is_loading_game == false) then begin
      if (map_first_run) then begin
         set_self_team(TEAM_NEW_RENO_BOXING_FAN);
         set_self_ai(AI_BOXING_FAN);
      end
      nr_add_timer_event_rand(self_obj, 25, 35, float_param);
   end
end

procedure map_exit_p_proc begin
end

procedure critter_p_proc begin
   if (self_can_see_dude) then begin
      if (hostile) then begin
         self_attack_dude;
      end
   end
end

procedure damage_p_proc begin
   if (source_obj == dude_obj) then begin
      set_personal_enemy;
   end
end

procedure pickup_p_proc begin
   if (source_obj == dude_obj) then begin
      set_hostile;
   end
end

procedure talk_p_proc begin
   if (dude_is_prizefighter) then begin
      if (dude_is_female) then begin
         call Node006;
      end else begin
         call Node005;
      end
   end else begin
      call Node004;
   end
   nr_add_timer_event_rand(self_obj, 25, 35, float_param);
end


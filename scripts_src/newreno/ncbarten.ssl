   float_msg(self_obj, mstr(200) + dude_name + mstr(201), FLOAT_COLOR_NORMAL);
end
procedure Node002 begin
   float_msg(self_obj, mstr(200) + made_man_name + mstr(206), FLOAT_COLOR_NORMAL);

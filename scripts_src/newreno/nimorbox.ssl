/* Include Files */
#define SCRIPT_REALNAME "nimorbox"
#include "../headers/define.h"

#define NAME                    SCRIPT_NIMORBOX

#include "../headers/command.h"
#include "../headers/newreno.h"
/* Defines and Macros */

#define LVAR_Restock_Time                 (0)
#define LVAR_Restock_Time_Fix             (1) //added by killap

/* Standard Script Procedures */
procedure start;
procedure map_enter_p_proc;
procedure map_update_p_proc;

import variable new_reno_mordino_bar_box;

procedure start begin
   new_reno_mordino_bar_box := self_obj;
end

procedure map_enter_p_proc begin
   //added by killap
   variable tmp;
   variable special_item;
   //end added

   new_reno_mordino_bar_box := self_obj;
   if (is_loading_game == false) then begin

      //added by killap - fix for game_time going negative after 7 years
      if (((game_time) < 0) and (local_var(LVAR_Restock_Time_Fix) == 0)) then begin
         set_local_var(LVAR_Restock_Time, game_time - 1);
         set_local_var(LVAR_Restock_Time_Fix, 1);
      end
      //end added

      if (local_var(LVAR_Restock_Time) < game_time) then begin
         check_restock_item(PID_MUTATED_FRUIT, 1, 2, 100)
         check_restock_item(PID_JET, 10, 20, 100)
         check_restock_item(PID_BEER, 1, 5, 100)
         check_restock_item(PID_BOOZE, 2, 10, 100)
         check_restock_item(PID_GAMMA_GULP_BEER, 2, 10, 100)
         check_restock_item(PID_ROENTGEN_RUM, 1, 5, 100)
         check_restock_item(PID_NUKA_COLA, 1, 5, 100)
         set_local_var(LVAR_Restock_Time, (random(3,7) * ONE_GAME_DAY) + game_time);
      end
   end
end

procedure map_update_p_proc begin
   new_reno_mordino_bar_box := self_obj;
end

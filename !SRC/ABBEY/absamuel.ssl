         NOption(700,Node012,4);
      if ( (global_var(GVAR_ABBEY_GRAVES) < 1) ) then
         NOption(303,Node008,4);
      if ( (local_var(LVAR_Tully_Friend) != 1) and (know_tully) ) then
         NOption(203,Node002,4);
   end else begin
      set_global_var(GVAR_ABBEY_TULLY,1);

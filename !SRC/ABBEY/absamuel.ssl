   if (local_var(LVAR_Pissed) == 1) then begin
      floater(430);
   end else if ( ((game_time_hour >= 1900) or (game_time_hour < 600)) ) then begin
      floater(2000);
   end else begin
      start_gdialog(NAME,self_obj,4,-1,-1);
      gSay_Start;
         call Node001;
      gSay_End;
      end_dialogue;
   end
end

